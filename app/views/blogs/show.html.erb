
<body>
  <div class="container">

    <nav class="navbar navbar-default">
      <div class="container-fluid">

        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">InstagramClone</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "InstagramClone", user_path(current_user.id), class: "navbar-brand" %>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/blogs/new">新規投稿</a></li>
            <li><a href="/blogs">投稿一覧</a></li>
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
          </ul>
        </div>

      </div>
    </nav>

    <div class="content">

      <% unless @blog.user_id.to_s == current_user.id %>
        <% if @favorite.present? %>
          <div class="confirm_content">
            <h3>以下投稿をお気に入りから解除しますか？</h3>
            <br>
            <label>image</label><br>
            <p><%= image_tag @blog.image %></p>
            <label>content</label><br>
            <p><%= @blog.content %></p>
            <label>投稿者</label><br>
            <p><%= @user_name %></p>
            <br>
            <%= link_to 'お気に入り解除する', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger confirm_btn' %>
          </div>
        <% else %>
          <div class="confirm_content">
            <h3>以下投稿をお気に入りに登録しますか？</h3>
            <br>
            <label>image</label><br>
            <p><%= image_tag @blog.image %></p>
            <label>content</label><br>
            <p><%= @blog.content %></p>
            <label>投稿者</label><br>
            <p><%= @user_name %></p>
            <br>
              <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary confirm_btn' %>
          </div>
        <% end %> <!--- End of "@favorite.present?" --->
      <% end %><!---  End of "@blog.user_id.to_s == current_user.id" --->

      <div class="return_index">
        <%= link_to '投稿一覧画面にもどる', blogs_path %>
      </div>

    </div> <!--End of content-->

<footer class="footer">
  <p>Hideki Fujimoto test application</p>
</footer>
</div>
</body>
